---
import { SITE, CONTACT } from "../consts";
---

<section
  class="container mx-auto min-h-[85vh] sm:min-h-screen p-4 sm:p-6 pt-16 sm:pt-20 lg:pt-24 flex items-center"
>
  <div class="grid grid-cols-1 lg:grid-cols-2 items-end gap-4 sm:gap-6 lg:gap-16 w-full">
    <h1 class="font-plex font-bold text-[clamp(3.5rem,18vw,5.5rem)] sm:text-[clamp(5rem,16vw,8rem)] lg:text-[clamp(6rem,12vw,12.5rem)] uppercase leading-[0.85] sm:leading-[0.9] lg:leading-none tracking-[-0.02em] flex flex-col">
      <span>Arshia</span>
      <span>Hemati</span>
    </h1>

    <!-- CTA aligned with title baseline -->
    <div class="flex flex-col sm:flex-row flex-wrap items-start sm:items-center gap-2 sm:gap-4 lg:gap-8 lg:justify-end pb-2 sm:pb-4">
      <!-- Available For Work badge -->
      <div class="flex items-center gap-1.5 sm:gap-3">
        <span class="relative flex h-1.5 w-1.5 sm:h-2 sm:w-2 lg:h-2.5 lg:w-2.5">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-foreground opacity-75"></span>
          <span class="relative inline-flex rounded-full h-1.5 w-1.5 sm:h-2 sm:w-2 lg:h-2.5 lg:w-2.5 bg-foreground"></span>
        </span>
        <span class="text-xs sm:text-sm lg:text-base text-muted-foreground uppercase tracking-widest">Available For Work</span>
      </div>

      <span class="hidden sm:block text-muted-foreground/30 text-xl">|</span>

      <!-- Links -->
      <div class="flex items-center gap-3 sm:gap-4 lg:gap-8">
        <button
          data-cal-link={CONTACT.CAL_LINK}
          data-cal-config='{"theme":"light"}'
          class="text-xs sm:text-sm lg:text-base text-foreground border-b border-foreground pb-0.5 hover:text-muted-foreground hover:border-muted-foreground transition-colors"
        >Book a call</button>
        <button
          data-contact-modal
          class="text-xs sm:text-sm lg:text-base text-muted-foreground hover:text-foreground transition-colors"
        >Inquire via email</button>
        <a
          class="text-xs sm:text-sm lg:text-base text-muted-foreground hover:text-foreground transition-colors"
          href="#projects">View recent work</a
        >
      </div>
    </div>
  </div>
</section>
