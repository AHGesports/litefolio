---
import { SITE, CONTACT, SOCIALS } from "../consts";

const linkedinUrl = SOCIALS.find(s => s.NAME === "Linkedin")?.HREF || "#";
---

<section
  class="container mx-auto h-screen min-h-[100dvh] p-4 sm:p-6 pt-20 sm:pt-20 lg:pt-24 flex items-center"
>
  <!--
    Sizing based on 30% of hero height principle.
    See HERO_SIZING_ANALYSIS.md for full calculations.

    Header: 30% of hero height (width-constrained on mobile/tablet)
    CTA: Header ÷ 7 ratio
    Gaps: Proportional to element sizes
  -->
  <div class="grid grid-cols-1 lg:grid-cols-2 items-end gap-9 sm:gap-14 lg:gap-16 w-full">
    <a href={linkedinUrl} target="_blank" rel="noopener noreferrer" class="block">
      <h1 class="font-plex font-bold text-[clamp(5rem,22vw,5.9rem)] sm:text-[clamp(7.9rem,20vw,9.6rem)] lg:text-[clamp(7.2rem,9vw,10.4rem)] uppercase leading-[0.9] tracking-[-0.02em] flex flex-col">
        <span>Arshia</span>
        <span>Hemati</span>
      </h1>
    </a>

    <!-- CTA aligned with title baseline -->
    <!-- Gap ratio: CTA text × 1.5 -->
    <div class="flex flex-row flex-nowrap items-center gap-4 sm:gap-7 lg:gap-9 lg:justify-end pb-1 sm:pb-4">
      <!-- Available For Work badge -->
      <!-- Badge gap ratio: CTA text × 0.75 -->
      <div class="flex items-center gap-2 sm:gap-3.5 lg:gap-4 shrink-0">
        <!-- Dot size ratio: CTA text × 0.5 -->
        <span class="relative flex h-1.5 w-1.5 sm:h-2.5 sm:w-2.5 lg:h-3 lg:w-3">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-foreground opacity-75"></span>
          <span class="relative inline-flex rounded-full h-1.5 w-1.5 sm:h-2.5 sm:w-2.5 lg:h-3 lg:w-3 bg-foreground"></span>
        </span>
        <span class="text-xs sm:text-[1.125rem] lg:text-[1.5rem] text-muted-foreground uppercase tracking-widest whitespace-nowrap">Available For Work</span>
      </div>

      <span class="text-muted-foreground/30 text-xs sm:text-[1.125rem] lg:text-[1.5rem]">|</span>

      <!-- Links -->
      <!-- Links gap ratio: CTA text × 1.5 -->
      <div class="flex items-center gap-4 sm:gap-7 lg:gap-9 shrink-0">
        <button
          data-cal-link={CONTACT.CAL_LINK}
          data-cal-config='{"theme":"light"}'
          class="text-xs sm:text-[1.125rem] lg:text-[1.5rem] text-foreground font-medium underline underline-offset-4 decoration-1 hover:text-muted-foreground transition-colors whitespace-nowrap"
        >Book a call</button>
        <button
          data-contact-modal
          class="text-xs sm:text-[1.125rem] lg:text-[1.5rem] text-muted-foreground hover:text-foreground transition-colors whitespace-nowrap"
        >Inquire via email</button>
      </div>
    </div>
  </div>
</section>
