---
import { Image } from "astro:assets";
import { SITE, CONTACT } from "../consts";
import logoImage from "../assets/logo.jpg";
---

<section
  id="about"
  class="relative bg-background w-full text-center"
>
  <div class="container mx-auto p-6 py-20 sm:py-24 flex justify-center items-center">
    <div
      class="flex flex-col md:flex-row gap-10 w-full max-w-2xl justify-center items-center"
    >
    <!-- Original picture frame (commented out)
    <div
      class="border border-neutral-800 h-[300px] w-[200px] bg-neutral-900 rotate-6 p-4 perfect-shadow"
    >
      <img src="/assets/mypic/4.jpg" alt="My photo" class="w-full h-[calc(100%-15px)] object-cover" />
    </div>
    -->

    <!-- Logo with Glow Effect
         Sizing: ~25-30% of container width (max-w-2xl = 672px)
         - Mobile: 140px
         - Tablet: 170px
         - Desktop: 200px
    -->
    <div class="relative flex-shrink-0">
      <!-- Glow element - blurred colored div behind logo -->
      <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120px] h-[120px] sm:w-[150px] sm:h-[150px] md:w-[180px] md:h-[180px] rounded-full bg-primary blur-3xl opacity-60"
        aria-hidden="true"
      ></div>
      <!-- Logo -->
      <div class="relative w-[140px] h-[140px] sm:w-[170px] sm:h-[170px] md:w-[200px] md:h-[200px] rounded-full overflow-hidden">
        <Image
          src={logoImage}
          alt="Logo"
          width={200}
          height={200}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    </div>
    <div class="flex flex-1 flex-col gap-3">
      <h2
        class="w-full text-center md:text-left text-lg sm:text-2xl md:text-4xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-br from-primary via-foreground to-foreground"
      >
        More about me
      </h2>
      <p
        class="w-full max-w-md text-center md:text-left text-sm sm:text-normal md:text-lg font-normal text-balance"
      >
        {SITE.BIO}
      </p>
      <div class="flex justify-center md:justify-start gap-2 mt-2">
        <a
          href="https://github.com/AHGesports"
          target="_blank"
          rel="noopener noreferrer"
          data-cursor="none"
          class="w-9 h-9 rounded-full border border-foreground/30 flex items-center justify-center hover:bg-foreground hover:text-background transition-colors group"
          aria-label="GitHub"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-foreground group-hover:text-background" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
            <path d="M9 18c-4.51 2-5-2-7-2"/>
          </svg>
        </a>
        <button
          data-contact-modal
          data-cursor="none"
          class="w-9 h-9 rounded-full border border-foreground/30 flex items-center justify-center hover:bg-foreground hover:text-background transition-colors group"
          aria-label="Send a message"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-foreground group-hover:text-background" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="16" x="2" y="4" rx="2"/>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
          </svg>
        </button>
        <button
          data-cal-link={CONTACT.CAL_LINK}
          data-cal-config='{"theme":"light"}'
          data-cursor="none"
          class="w-9 h-9 rounded-full border border-foreground/30 flex items-center justify-center hover:bg-foreground hover:text-background transition-colors group"
          aria-label="Book a call"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-foreground group-hover:text-background pointer-events-none" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </button>
        <a
          href="https://instagram.com/_.a_he._"
          target="_blank"
          rel="noopener noreferrer"
          data-cursor="none"
          class="w-9 h-9 rounded-full border border-foreground/30 flex items-center justify-center hover:bg-foreground hover:text-background transition-colors group"
          aria-label="Instagram"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-foreground group-hover:text-background" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
            <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
          </svg>
        </a>
      </div>
    </div>
    </div>
  </div>
</section>
