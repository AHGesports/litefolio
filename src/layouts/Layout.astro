---
import type { languageList } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";
import { SEO } from "astro-seo";
import "@/styles/global.css";

interface Props {
  title: string;
}
const currentLang = Astro.currentLocale || "en";
const translateLabels = useTranslations(
  currentLang as keyof typeof languageList
);

const { title } = Astro.props;
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <SEO
      title={translateLabels("Layout.title")}
      description={translateLabels("Layout.description")}
      openGraph={{
        basic: {
          title: translateLabels("Layout.title"),
          type: "website",
          image:
            "https://raw.githubusercontent.com/gonzalochale/litefolio/v2/public/assets/preview.png",
        },
      }}
      twitter={{
        creator: "@gonzalochale",
      }}
      extend={{
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content:
              "https://raw.githubusercontent.com/gonzalochale/litefolio/v2/public/assets/preview.png",
          },
          {
            name: "twitter:title",
            content: translateLabels("Layout.title"),
          },
          {
            name: "twitter:description",
            content: translateLabels("Layout.title"),
          },
          {
            name: "twitter:image:src",
            content:
              "https://raw.githubusercontent.com/gonzalochale/litefolio/v2/public/assets/preview.png",
          },
          {
            name: "twitter:url",
            content: "https://litefolio.gonzalochale.dev",
          },
          {
            name: "twitter:card",
            content: "summary_large_image",
          },
          {
            name: "twitter:site",
            content: "@gonzalochale",
          },
          {
            name: "twitter:creator",
            content: "@gonzalochale",
          },
          {
            name: "twitter:image:alt",
            content: translateLabels("Layout.title"),
          },
        ],
      }}
    />
    <meta charset="UTF-8" />
    <meta name="description" content={translateLabels("Layout.description")} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      is:inline
      data-domain="litefolio.gonzalochale.dev"
      src="https://plausible.gonzalochale.dev/js/script.outbound-links.js"
    ></script>
  </head>
  <body
    class="relative flex flex-col w-full min-h-dvh justify-center items-center bg-background"
  >
    <slot />
  </body>
</html>
