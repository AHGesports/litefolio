---
/*
  Mockup images are provided by shots.so
  Link: https://shots.so/
*/

import Image from "astro/components/Image.astro";
import SkillsModal from "./skills/SkillsModal.astro";
import LaptopVideo from "./LaptopVideo.astro";
import AgentArchitecture from "./AgentArchitecture.astro";
import { SKILL_CATEGORIES, getSkillCount } from "../data/skills";
---

<section
  id="projects"
  class="relative overflow-hidden bg-foreground w-full text-center select-none"
>
  <div class="container mx-auto flex flex-col justify-center items-center gap-6 sm:gap-10 p-4 sm:p-6 py-16 sm:py-24">
    <h2
      class="z-10 w-full max-w-xl text-center text-xl sm:text-2xl lg:text-4xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-b from-background via-background to-muted-foreground"
    >
      Every project is a new challenge to overcome.
    </h2>
    <p
      class="w-full max-w-xl bg-clip-text text-transparent bg-gradient-to-b from-background via-background to-muted-foreground text-center text-base sm:text-lg lg:text-xl font-light tracking-tighter text-balance"
    >
       
    </p>
    <div class="z-10 w-full grid grid-cols-2 lg:grid-cols-5 gap-2 sm:gap-3">
    <!-- Elyt - Main Project -->
    <article
      class="order-1 overflow-hidden relative bg-dark-card col-span-2 lg:col-span-3 lg:row-span-2 border min-h-[320px] max-h-[440px] sm:min-h-[400px] sm:max-h-[520px] lg:min-h-[580px] lg:max-h-[680px] h-auto border-dark-border rounded-[1rem] flex flex-col"
    >
      <div class="flex flex-col gap-2 w-full items-start p-3 sm:p-4 text-left shrink-0">
        <h3
          class="text-left text-lg sm:text-xl lg:text-2xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-br from-background via-background to-secondary"
        >
          Elyt
        </h3>
        <p
          class="w-full text-muted-foreground text-left text-xs sm:text-sm lg:text-lg font-light tracking-tighter text-balance"
        >
          AI-powered browser automation commercial product with multi-profile orchestration, humanization technology, and multi-provider LLM integration.
        </p>
      </div>
      <div class="flex-1 flex items-center justify-center p-2 sm:p-4 min-h-[200px] sm:min-h-[300px] lg:min-h-[450px]">
        <LaptopVideo
          videoSrc="/video/video.mp4"
          webmSrc="/video/video.webm"
          posterSrc="/video/poster.webp"
          alt="Elyt demo"
        />
      </div>
    </article>
    <!-- Skills -->
    <article
      class="order-3 lg:order-2 overflow-hidden group bg-dark-card col-span-1 lg:col-span-2 lg:row-span-2 lg:col-start-4 min-h-[180px] max-h-[260px] sm:min-h-[220px] sm:max-h-[300px] lg:min-h-[580px] lg:max-h-[680px] h-auto border border-dark-border rounded-[1rem] p-1.5 sm:p-2 lg:p-6 flex flex-col flex-1 gap-0.5 lg:gap-3 justify-center items-center"
    >
      <div
        role="button"
        tabindex="0"
        data-skill-category="languages"
        class="w-fit rounded-full bg-background px-2 py-1 sm:px-2.5 sm:py-1.5 lg:px-5 lg:py-2.5 flex justify-center items-center gap-1 sm:gap-1.5 lg:gap-3 lg:rotate-12 group-hover:rotate-0 border transition-all duration-300 ease-in-out cursor-pointer hover:scale-105 hover:shadow-lg"
      >
        <span class="text-[11px] sm:text-xs lg:text-xl font-light tracking-tighter">Languages</span>
        <span class="text-[9px] sm:text-[10px] lg:text-sm text-muted-foreground">({getSkillCount(SKILL_CATEGORIES[0])})</span>
        <svg class="w-2.5 h-2.5 lg:w-4 lg:h-4 text-muted-foreground hidden sm:block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
      </div>
      <div
        role="button"
        tabindex="0"
        data-skill-category="backend"
        class="w-fit rounded-full bg-background px-2 py-1 sm:px-2.5 sm:py-1.5 lg:px-5 lg:py-2.5 flex justify-center items-center gap-1 sm:gap-1.5 lg:gap-3 lg:-rotate-6 group-hover:rotate-0 border transition-all duration-300 ease-in-out cursor-pointer hover:scale-105 hover:shadow-lg"
      >
        <span class="text-[11px] sm:text-xs lg:text-xl font-light tracking-tighter">Backend</span>
        <span class="text-[9px] sm:text-[10px] lg:text-sm text-muted-foreground">({getSkillCount(SKILL_CATEGORIES[1])})</span>
        <svg class="w-2.5 h-2.5 lg:w-4 lg:h-4 text-muted-foreground hidden sm:block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
      </div>
      <div
        role="button"
        tabindex="0"
        data-skill-category="frontend"
        class="w-fit rounded-full bg-background px-2 py-1 sm:px-2.5 sm:py-1.5 lg:px-5 lg:py-2.5 flex justify-center items-center gap-1 sm:gap-1.5 lg:gap-3 border transition-all duration-300 ease-in-out cursor-pointer hover:scale-105 hover:shadow-lg"
      >
        <span class="text-[11px] sm:text-xs lg:text-xl font-light tracking-tighter">Frontend</span>
        <span class="text-[9px] sm:text-[10px] lg:text-sm text-muted-foreground">({getSkillCount(SKILL_CATEGORIES[2])})</span>
        <svg class="w-2.5 h-2.5 lg:w-4 lg:h-4 text-muted-foreground hidden sm:block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
      </div>
      <div
        role="button"
        tabindex="0"
        data-skill-category="devops"
        class="w-fit rounded-full bg-background px-2 py-1 sm:px-2.5 sm:py-1.5 lg:px-5 lg:py-2.5 flex justify-center items-center gap-1 sm:gap-1.5 lg:gap-3 lg:rotate-6 group-hover:rotate-0 border transition-all duration-300 ease-in-out cursor-pointer hover:scale-105 hover:shadow-lg"
      >
        <span class="text-[11px] sm:text-xs lg:text-xl font-light tracking-tighter">DevOps</span>
        <span class="text-[9px] sm:text-[10px] lg:text-sm text-muted-foreground">({getSkillCount(SKILL_CATEGORIES[3])})</span>
        <svg class="w-2.5 h-2.5 lg:w-4 lg:h-4 text-muted-foreground hidden sm:block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
      </div>
      <div
        role="button"
        tabindex="0"
        data-skill-category="ai-automation"
        class="w-fit rounded-full bg-background px-2 py-1 sm:px-2.5 sm:py-1.5 lg:px-5 lg:py-2.5 flex justify-center items-center gap-1 sm:gap-1.5 lg:gap-3 lg:-rotate-12 group-hover:rotate-0 border transition-all duration-300 ease-in-out cursor-pointer hover:scale-105 hover:shadow-lg"
      >
        <span class="text-[11px] sm:text-xs lg:text-xl font-light tracking-tighter">AI & Auto</span>
        <span class="text-[9px] sm:text-[10px] lg:text-sm text-muted-foreground">({getSkillCount(SKILL_CATEGORIES[4])})</span>
        <svg class="w-2.5 h-2.5 lg:w-4 lg:h-4 text-muted-foreground hidden sm:block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
      </div>
      <div
        role="button"
        tabindex="0"
        data-skill-category="specialized"
        class="w-fit rounded-full bg-background px-2 py-1 sm:px-2.5 sm:py-1.5 lg:px-5 lg:py-2.5 flex justify-center items-center gap-1 sm:gap-1.5 lg:gap-3 lg:rotate-3 group-hover:rotate-0 border transition-all duration-300 ease-in-out cursor-pointer hover:scale-105 hover:shadow-lg"
      >
        <span class="text-[11px] sm:text-xs lg:text-xl font-light tracking-tighter">Specialized</span>
        <span class="text-[9px] sm:text-[10px] lg:text-sm text-muted-foreground">({getSkillCount(SKILL_CATEGORIES[5])})</span>
        <svg class="w-2.5 h-2.5 lg:w-4 lg:h-4 text-muted-foreground hidden sm:block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
      </div>
    </article>
    <!-- Agent Architecture Visualization -->
    <article
      class="order-2 lg:order-3 overflow-hidden bg-dark-card col-span-1 lg:col-span-2 lg:row-span-2 lg:row-start-3 border min-h-[180px] max-h-[260px] sm:min-h-[220px] sm:max-h-[300px] lg:min-h-[580px] lg:max-h-[680px] h-auto border-dark-border rounded-[1rem]"
    >
      <AgentArchitecture />
    </article>
    <!-- Synth - Full width row 3 on mobile/tablet -->
    <article
      class="order-4 overflow-hidden bg-dark-card col-span-2 lg:col-span-3 lg:row-span-2 lg:col-start-3 lg:row-start-3 border min-h-[320px] max-h-[440px] sm:min-h-[400px] sm:max-h-[520px] lg:min-h-[580px] lg:max-h-[680px] h-auto border-dark-border rounded-[1rem] flex flex-col"
    >
      <div class="flex flex-col gap-2 w-full items-start p-3 sm:p-4 text-left shrink-0">
        <h3
          class="text-left text-lg sm:text-xl lg:text-2xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-br from-background via-background to-secondary"
        >
          Synth
        </h3>
        <p
          class="w-full text-muted-foreground text-left text-xs sm:text-sm lg:text-lg font-light tracking-tighter text-balance"
        >
          An AI Agent and workflow management powerhouse for the future, made from the experience of Elyt. Harnessing the power of open-source to integrate with over 150+ services, and features database-per-tenant architecture with database branching to give agents their own state and much more still taking shape. My most ambitious commercial project to date.
        </p>
      </div>
      <div class="flex-1 flex items-center justify-center p-2">
        <img
          src="/assets/simNeon.svg"
          alt="Mockup Project"
          loading="lazy"
          class="object-contain w-full h-full max-h-[280px] sm:max-h-[350px] lg:max-h-full rounded-md"
        />
      </div>
    </article>
    <!-- Enterprise Experience - Row 4 left on mobile/tablet -->
    <article
      class="order-5 overflow-hidden bg-dark-card col-span-1 lg:col-span-3 lg:row-span-2 lg:row-start-5 border min-h-[180px] max-h-[260px] sm:min-h-[220px] sm:max-h-[300px] lg:min-h-[260px] lg:max-h-[340px] h-auto border-dark-border rounded-[1rem] flex flex-col lg:flex-row lg:gap-3"
    >
      <div class="flex flex-col gap-1 sm:gap-2 w-full lg:w-1/2 items-start p-3 sm:p-4 text-left shrink-0">
        <h3
          class="text-left text-base sm:text-lg lg:text-xl xl:text-2xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-br from-background via-background to-secondary"
        >
          Enterprise Experience
        </h3>
        <p
          class="w-full text-muted-foreground text-left text-[10px] sm:text-xs lg:text-sm xl:text-base font-light tracking-tighter text-balance line-clamp-4 lg:line-clamp-none"
        >
          Years of experience on Enterprise systems taught me scale. Ticketing platforms, reservation systems, and POS solutions processing real transactions for real businesses. Hardware integrations from payment terminals to access control. The work that defined my engineering standards and career.
        </p>
      </div>
      <div class="flex-1 flex items-center justify-center lg:justify-start p-2 lg:pl-[6%] min-h-[80px] lg:min-h-[120px] overflow-hidden">
        <img
          src="/assets/mockup3.svg"
          alt="Mockup Project"
          loading="lazy"
          class="object-contain max-w-[80px] sm:max-w-[100px] lg:max-w-[157px] xl:max-w-[190px] rounded-md"
        />
      </div>
    </article>
    <!-- CTA - Row 4 right on mobile/tablet -->
    <article
      class="order-6 overflow-hidden bg-dark-card col-span-1 lg:col-span-2 lg:row-span-2 lg:col-start-4 lg:row-start-5 border min-h-[180px] max-h-[260px] sm:min-h-[220px] sm:max-h-[300px] lg:min-h-[260px] lg:max-h-[340px] h-auto border-dark-border rounded-[1rem]"
    >
      <div
        class="w-full h-full flex flex-col gap-3 sm:gap-5 justify-center items-center p-3 sm:p-4"
      >
        <h1
          class="text-base sm:text-xl lg:text-2xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-br from-background via-background to-secondary text-center"
        >
          Let's work together
        </h1>
        <a
          href="https://linkedin.com/in/arshia-hemati-5358742ab"
          target="_blank"
          rel="noopener noreferrer"
          class="w-fit flex gap-2 justify-center items-center px-3 py-1.5 sm:px-4 sm:py-2 text-sm sm:text-lg font-medium text-background bg-primary rounded-full"
        >
          LinkedIn
          <svg
            width="256"
            height="256"
            xmlns="http://www.w3.org/2000/svg"
            preserveAspectRatio="xMidYMid"
            viewBox="0 0 256 256"
            class="size-5"
            ><path
              d="M218.123 218.127h-37.931v-59.403c0-14.165-.253-32.4-19.728-32.4-19.756 0-22.779 15.434-22.779 31.369v60.43h-37.93V95.967h36.413v16.694h.51a39.907 39.907 0 0 1 35.928-19.733c38.445 0 45.533 25.288 45.533 58.186l-.016 67.013ZM56.955 79.27c-12.157.002-22.014-9.852-22.016-22.009-.002-12.157 9.851-22.014 22.008-22.016 12.157-.003 22.014 9.851 22.016 22.008A22.013 22.013 0 0 1 56.955 79.27m18.966 138.858H37.95V95.967h37.97v122.16ZM237.033.018H18.89C8.58-.098.125 8.161-.001 18.471v219.053c.122 10.315 8.576 18.582 18.89 18.474h218.144c10.336.128 18.823-8.139 18.966-18.474V18.454c-.147-10.33-8.635-18.588-18.966-18.453"
              fill="currentColor"></path></svg
          >
        </a>
      </div>
    </article>
    </div>
  </div>
  <div
    class="bg-white opacity-10 absolute size-80 top-[-160px] border blur-[150px] rounded-full"
  >
  </div>
</section>

<SkillsModal />
