---
import { SITE } from "../consts";

const links = [
  { name: "Home", href: "/", target: "_self" },
  { name: "About", href: "#about", target: "_self" },
  { name: "Work", href: "#projects", target: "_self" },
  { name: "Contact", href: "#contact", target: "_self" },
];

// Get first letter of first name
const firstLetter = SITE.TITLE.charAt(0).toUpperCase();
---

<header class="fixed top-0 w-full z-[100] pointer-events-none">
  <div class="container mx-auto flex items-center justify-between p-4 md:p-6">
    <!-- Logo pill -->
    <a
      href="/"
      class="pointer-events-auto font-plex font-bold text-2xl md:text-3xl px-4 py-2 rounded-full bg-background/70 backdrop-blur-xl border border-border/50 shadow-lg hover:bg-background/90 transition-all duration-300"
      >{firstLetter}.</a
    >

    <!-- Desktop nav pill -->
    <nav
      class="nav-container pointer-events-auto hidden md:flex items-center gap-1 px-2 py-2 rounded-full bg-background/70 backdrop-blur-xl border border-border/50 shadow-lg"
    >
      {
        links.map((link) => (
          <a
            href={link.href}
            class="nav-link px-4 py-1.5 rounded-full text-muted-foreground transition-all duration-300 hover:bg-foreground hover:text-background"
          >
            {link.name}
          </a>
        ))
      }
    </nav>

    <!-- Mobile menu button -->
    <button
      id="menu-toggle"
      class="hamburger pointer-events-auto focus:outline-none flex md:hidden px-3 py-3 rounded-full bg-background/70 backdrop-blur-xl border border-border/50 shadow-lg"
      aria-label="Toggle navigation"
    >
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
  </div>

  <!-- Mobile menu -->
  <div
    id="menu-mobile"
    class="hidden md:hidden pointer-events-auto mx-4 mt-2 p-4 rounded-2xl bg-background/90 backdrop-blur-xl border border-border/50 shadow-xl"
  >
    <nav class="nav-container flex flex-col gap-2">
      {
        links.map((link) => (
          <a
            href={link.href}
            class="nav-link px-4 py-3 rounded-xl text-lg text-muted-foreground transition-all duration-300 hover:bg-foreground hover:text-background"
          >
            {link.name}
          </a>
        ))
      }
    </nav>
  </div>
</header>

<style>
  /* Blur effect on sibling links when hovering */
  .nav-container:hover .nav-link {
    opacity: 0.4;
    filter: blur(1px);
  }

  .nav-container:hover .nav-link:hover {
    opacity: 1;
    filter: blur(0);
  }

  .hamburger {
    gap: 5px;
    cursor: pointer;
    position: relative;
    width: 24px;
    height: 21px;
    padding: 0;
    border: 0;
    background: transparent;
  }

  .hamburger-line {
    width: 24px;
    height: 3px;
    background-color: hsl(var(--foreground));
    transition: all 0.3s ease;
    position: absolute;
    left: 0;
  }

  .hamburger-line:nth-child(1) {
    top: 0;
  }

  .hamburger-line:nth-child(2) {
    top: 9px;
  }

  .hamburger-line:nth-child(3) {
    top: 18px;
  }

  .hamburger.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg);
    top: 9px;
  }

  .hamburger.active .hamburger-line:nth-child(2) {
    display: none;
    opacity: 0;
  }

  .hamburger.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg);
    top: 9px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuMobile = document.getElementById("menu-mobile");
    const toggle = document.getElementById("menu-toggle");
    toggle?.addEventListener("click", () => {
      menuMobile?.classList.toggle("hidden");
      toggle.classList.toggle("active");
      const expanded = toggle.classList.contains("active");
      toggle.setAttribute("aria-expanded", String(expanded));
    });
  });
</script>
