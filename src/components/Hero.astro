---
import { SITE } from "../consts";
---

<section
  class="container mx-auto min-h-screen p-4 sm:p-6 pt-20 sm:pt-24 flex items-center"
>
  <div class="grid grid-cols-1 lg:grid-cols-2 items-end gap-6 sm:gap-8 lg:gap-16 w-full">
    <h1 class="font-plex font-bold text-[clamp(3.5rem,15vw,12.5rem)] sm:text-[clamp(6rem,20vw,12.5rem)] uppercase leading-none tracking-[-0.02em]">
      {SITE.TITLE}
    </h1>

    <!-- CTA aligned with title baseline -->
    <div class="flex flex-col sm:flex-row flex-wrap items-start sm:items-center gap-3 sm:gap-4 md:gap-6 lg:gap-8 lg:justify-end pb-4">
      <!-- Available For Work badge -->
      <div class="flex items-center gap-2 sm:gap-3">
        <span class="relative flex h-2 w-2 sm:h-2.5 sm:w-2.5">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-foreground opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 sm:h-2.5 sm:w-2.5 bg-foreground"></span>
        </span>
        <span class="text-sm sm:text-base text-muted-foreground uppercase tracking-widest">Available For Work</span>
      </div>

      <span class="hidden sm:block text-muted-foreground/30 text-xl">|</span>

      <!-- Links -->
      <div class="flex items-center gap-3 sm:gap-4 md:gap-6 lg:gap-8">
        <a
          class="text-sm sm:text-base text-foreground border-b border-foreground pb-0.5 hover:text-muted-foreground hover:border-muted-foreground transition-colors"
          href="#contact">Book a call</a
        >
        <a
          class="text-sm sm:text-base text-muted-foreground hover:text-foreground transition-colors"
          href="#projects">View recent work</a
        >
      </div>
    </div>
  </div>
</section>
