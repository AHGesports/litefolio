---
import { SITE, SOCIALS } from "../consts";
const instagramLink = SOCIALS.find(s => s.NAME === "Instagram")?.HREF || "#";
---

<section
  id="about"
  class="relative bg-background w-full text-center"
>
  <div class="container mx-auto p-6 py-20 sm:py-24 flex justify-center items-center">
    <div
      class="flex flex-col md:flex-row gap-10 w-full max-w-2xl justify-center items-center"
    >
    <div
      class="border h-[300px] w-[200px] bg-accent rotate-6 p-4 perfect-shadow"
    >
      <div class="w-full h-[calc(100%-50px)] bg-background"></div>
    </div>
    <div class="flex flex-1 flex-col gap-3">
      <h2
        class="w-full text-left text-lg sm:text-2xl md:text-4xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-br from-primary via-foreground to-foreground"
      >
        More about me
      </h2>
      <p
        class="w-full max-w-md text-left text-sm sm:text-normal md:text-lg font-normal text-balance"
      >
        {SITE.BIO}
      </p>
      <div class="flex items-center gap-3">
        <a
          href={instagramLink}
          target="_blank"
          rel="noopener noreferrer"
          class="relative w-fit flex justify-center items-center px-4 py-2 sm:px-6 sm:py-3 sm:text-lg font-medium text-background bg-primary rounded-full perfect-shadow"
        >
          Connect with me
          <div
            class="z-[-1] bg-gradient-to-b from-secondary via-primary to-primary absolute w-[calc(100%-4px)] h-[calc(100%-4px)] rounded-full border-t-2 border-secondary"
          >
          </div>
        </a>
      </div>
    </div>
    </div>
  </div>
</section>
