import {labels} from "@/i18n/ui";
import {useTranslations} from "@/i18n/utils";
import {languageList} from "@/i18n/ui";

const currentLang = Astro.currentLocale || "en";
const translateLabels = useTranslations(currentLang as keyof typeof labels);
---

<header class="bg-foreground w-full px-4 h-10 flex justify-center items-center">
  <a
    href="https://github.com/gonzalochale/litefolio"
    target="_blank"
    rel="noopener noreferrer"
    class="group flex items-center gap-2 text-sm text-card">
    {translateLabels("Header.template")}
    <svg
      width="15"
      height="15"
      viewBox="0 0 15 15"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      class="rotate-45 group-hover:rotate-0 transition-transform duration-300 ease-in-out"
      ><path
        d="M3.64645 11.3536C3.45118 11.1583 3.45118 10.8417 3.64645 10.6465L10.2929 4L6 4C5.72386 4 5.5 3.77614 5.5 3.5C5.5 3.22386 5.72386 3 6 3L11.5 3C11.6326 3 11.7598 3.05268 11.8536 3.14645C11.9473 3.24022 12 3.36739 12 3.5L12 9.00001C12 9.27615 11.7761 9.50001 11.5 9.50001C11.2239 9.50001 11 9.27615 11 9.00001V4.70711L4.35355 11.3536C4.15829 11.5488 3.84171 11.5488 3.64645 11.3536Z"
        fill="currentColor"
        fill-rule="evenodd"
        clip-rule="evenodd"></path></svg
    >
  </a>
  <a
    href={currentLang === "en" ? "/es" : "/en"}
    class="absolute right-4 text-sm text-card border border-white bg-transparent hover:bg-gray-50 hover:text-black px-2 py-1 rounded transition-colors duration-300 ease-in-out">
    {currentLang === "en" ? "Espa√±ol" : "English"}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="size-4 inline-block ml-2">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="m10.5 21 5.25-11.25L21 21m-9-3h7.5M3 5.621a48.474 48.474 0 0 1 6-.371m0 0c1.12 0 2.233.038 3.334.114M9 5.25V3m3.334 2.364C11.176 10.658 7.69 15.08 3 17.502m9.334-12.138c.896.061 1.785.147 2.666.257m-4.589 8.495a18.023 18.023 0 0 1-3.827-5.802"
      ></path>
    </svg>
  </a>
</header>
